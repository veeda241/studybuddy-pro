# Server Port
PORT=5000

# JWT Secret - can be any long, random string
JWT_SECRET=a_very_secret_key_that_should_be_long_and_random

# Google Client ID for user login
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com

# Google AI API Key for content generation
GOOGLE_GENAI_API_KEY=YOUR_GOOGLE_GENAI_API_KEY

# --- Firebase Admin SDK Credentials ---
# You can get these from the JSON file you download from your Firebase project settings
FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID
FIREBASE_PRIVATE_KEY_ID=YOUR_FIREBASE_PRIVATE_KEY_ID
FIREBASE_CLIENT_EMAIL=YOUR_FIREBASE_CLIENT_EMAIL
FIREBASE_CLIENT_ID=YOUR_FIREBASE_CLIENT_ID

# IMPORTANT: For the private key, wrap the entire key in double quotes as shown.
# Copy the key from your JSON file, and replace the placeholder below.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nREPLACE_WITH_YOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
